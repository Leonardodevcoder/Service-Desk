{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "classes": true,
        "defaultParams": true
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "no-console": "off",
       "no-const-assign": 1,
      "no-extra-semi": 0,
      "semi": 0,
      "no-fallthrough": 0,
      "no-empty": 0,
      "no-mixed-spaces-and-tabs": 1,
      "no-redeclare": 0,
      "no-this-before-super": 1,
      "no-undef": 1,
      "no-unreachable": 1,
      "no-unused-vars": "off",
      "no-use-before-define": 0,
      "constructor-super": 1,
      "curly": 0,
      "eqeqeq": 1,
      "func-names": 1,
      "valid-typeof": 1,
      "prettier/prettier": 1
      // overrideing recommented rules

    },
    "extends": [
      "eslint-config-prettier",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "eslint-plugin-prettier",
      "react",
      "jsx-a11y",
      "import"
    ]
  }
